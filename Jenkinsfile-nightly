pipeline {
    agent any

    environment {
        NETLIFY_PROJECT_ID = 'f53479ca-7be4-453c-95fd-740fb8231343'
        NETLIFY_AUTH_TOKEN = credentials('netlify-token')
        REACT_APP_VERSION = "1.0.$BUILD_ID"
    }

    stages {
